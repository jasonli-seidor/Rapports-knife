{
  "manifest_version": 3,
  "name": "Jira Worklog Reporter",
  "version": "1.0",
  "description": "A Chrome extension to fetch and display Jira worklogs for a specified date range.",
  "permissions": ["storage", "cookies", "tabs", "scripting"],
  "host_permissions": [
    "https://*.atlassian.net/",
    "https://intranetnew.seidor.com/",
    "https://apis-intranet.seidor.com/"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
